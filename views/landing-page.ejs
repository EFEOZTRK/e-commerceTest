      beforePrice: 60,
      afterPrice: 54,
      imgSrc: "/images/p1.webp",
      href: "/landing-page/product-details",
    },
    {
      description: "Japanese Detailed T-Shirt",
      beforePrice: 60,
      afterPrice: 54,
      imgSrc: "/images/p1.webp",
      href: "/landing-page/product-details",
    },
    {
      description: "Japanese Detailed T-Shirt",
      beforePrice: 60,
      afterPrice: 54,
      imgSrc: "/images/p1.webp",
      href: "/landing-page/product-details",
    },
  ];

  const productsContainer = document.querySelectorAll(".products-container");

  productsContainer.forEach((container) => {
    productsObj.forEach((product, index) => {
      let AppendCards = document.createElement("div");
      AppendCards.classList.add("product-card");

      AppendCards.innerHTML = `
                <a href="${product.href}">
                  <img class="item-img" src="${product.imgSrc}" alt="Product Image" />
                  <div class="item-description">
                    <p>${product.description}</p>
                  </div>
                  <div class="item-price">
                    <div class="discount">
                      <div class="discount-percent">%5</div>
                    </div>
                    <div class="price">
                      <p class="before-discount" style="text-decoration: line-through;">
                        $${product.beforePrice}
                      </p>
                      <p class="after-discount">$${product.afterPrice}</p>
                    </div>
                  </div>
                </a>
              `;

      container.appendChild(AppendCards);
    });
  });

  let cart = document.getElementById("cart");
  let cartBox = document.querySelector(".cartBox");

  let body = document.getElementById("body");

  const hamburgerIcon = document.getElementById("hamburger-icon");
  const hamburgerMenu = document.querySelector(".hamburger-menu");
  const closeMenuIcon = document.querySelector(".menu-header .fa-xmark");

  const cartContainer = document.getElementById("cartBox");

  const itemImg = document.querySelectorAll(".item-img");
  ////////////////////////////////////////// SLIDER CODE PART //////////////////////////////////////////////////////////////////////////////

  const btnLeft = document.querySelectorAll("#slider-left");
  const btnRight = document.querySelectorAll("#slider-right");
  const cards = document.querySelectorAll(".product-card");

  const cardWidth = cards[0].offsetWidth + 25;

  productsContainer.forEach((container, sliderIndex) => {
    let index = 0;

    btnLeft[sliderIndex].addEventListener("click", () => {
      if (index > 0) {
        index--;
        container.style.transform = `translateX(-${index * cardWidth}px)`;
      }
    });

    btnRight[sliderIndex].addEventListener("click", () => {
      if (index < cards.length - 1) {
        index++;
        container.style.transform = `translateX(-${index * cardWidth}px)`;
      }
      if (index == 4) {
        index = -1;
      }
    });
  });
  /////////////////////////////////////////////////////////////////////////////////////

  //Hover effect for image change code//
  itemImg.forEach((item) => {
    item.addEventListener("mouseenter", () => {
      item.src = "/images/p2.webp";
    });

    item.addEventListener("mouseleave", () => {
      item.src = "/images/p1.webp";
    });
  });
  ///////////////////////////////////////////////////////

  //Hamburger menu hide or show
  hamburgerIcon.addEventListener("click", () => {
    hamburgerMenu.classList.toggle("active");
  });

  closeMenuIcon.addEventListener("click", function () {
    hamburgerMenu.classList.remove("active");
    body.style.backgroundColor = "";
  });
  ///////////////////////////////////////////////////////
  //Cart box show
  cart.addEventListener("click", () => {
    cartBox.classList.toggle("active");
  });
</script>
