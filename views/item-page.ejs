<script>
  //////////////// SIZE BUTTONS CODE ////////////
  let boxing = document.querySelectorAll(".pick-size");

  boxing.forEach((box, index) => {
    box.addEventListener("click", () => {
      boxing.forEach((b) => {
        b.classList.remove("active");
      });
      box.classList.toggle("active");
    });
  });
  /////////////////// COUNTER /////////////////
  let minus = document.getElementById("min");
  let numberDiv = document.getElementById("num");
  let plus = document.getElementById("plus");
  let counterNum = 1;

  numberDiv.innerHTML = `${counterNum}`;

  minus.addEventListener("click", () => {
    if (counterNum == 1) {
      return;
    } else {
      counterNum--;
      numberDiv.innerHTML = `${counterNum}`;
    }
  });
  plus.addEventListener("click", () => {
    if (counterNum == 10) {
      return;
    } else {
      counterNum++;
      numberDiv.innerHTML = `${counterNum}`;
    }
  });

  //Hamburger menu hide or show
  const hamburgerIcon = document.getElementById("hamburger-icon");
  const hamburgerMenu = document.querySelector(".hamburger-menu");
  const closeMenuIcon = document.querySelector(".menu-header .fa-xmark");

  hamburgerIcon.addEventListener("click", () => {
    hamburgerMenu.classList.toggle("active");
  });

  closeMenuIcon.addEventListener("click", function () {
    hamburgerMenu.classList.remove("active");
    body.style.backgroundColor = "";
  });

  //CART BOX SHOW OR HIDE//
  let cart = document.getElementById("cart");
  let cartBox = document.querySelector(".cartBox");

  cart.addEventListener("click", () => {
    cartBox.classList.toggle("active");
  });
</script>
